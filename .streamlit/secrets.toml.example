# ============================================
# Streamlit Cloud Secrets Configuration
# BrandedAI Bank Reconciliation SaaS Platform
# ============================================
# Copy this to secrets.toml and fill in your values
# In Streamlit Cloud, add these in the app settings > Secrets

# ============================================
# API KEYS
# ============================================

# OpenRouter API (recommended - provides access to multiple AI models)
OPENROUTER_API_KEY = "sk-or-v1-your-key-here"

# Or use direct Anthropic API
# ANTHROPIC_API_KEY = "sk-ant-your-key-here"

# ============================================
# AUTHENTICATION
# ============================================

# Option 1: Simple password protection (quick deployment)
# APP_PASSWORD = "secure-password-here"

# Option 2: Restrict to specific email domains (Streamlit Cloud Teams)
# ALLOWED_DOMAINS = "liquidline.co.uk,brandedai.com"

# Option 3: Restrict to specific email addresses
# ALLOWED_EMAILS = "curtis@liquidline.co.uk,erin@liquidline.co.uk,amber@liquidline.co.uk"

# Option 4: API keys for programmatic access
# API_KEYS = "key1,key2,key3"

# ============================================
# CLIENT CONFIGURATION (Multi-tenant SaaS)
# ============================================

CLIENT_NAME = "Liquidline"
# CLIENT_LOGO = "https://liquidline.co.uk/logo.png"
PRIMARY_COLOR = "#1E88E5"
DATA_RETENTION_DAYS = "90"

# ============================================
# FEATURE FLAGS
# ============================================

FEATURE_AI_MATCHING = "true"
FEATURE_REMITTANCE = "true"

# ============================================
# DATABASE (Optional - for data persistence)
# ============================================

# Supabase for data persistence
# SUPABASE_URL = "https://your-project.supabase.co"
# SUPABASE_KEY = "your-anon-key"
